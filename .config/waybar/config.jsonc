// -*- mode: jsonc -*-
{
	"layer": "top",
	"position": "top",
	"height": 25,
	"spacing": 0,
	"output": "eDP-1",
	"modules-left": [
		"hyprland/workspaces",
		"hyprland/submap"
	],
	"modules-center": ["mpris"],
	"modules-right": [
		"custom/audio",
		"network",
