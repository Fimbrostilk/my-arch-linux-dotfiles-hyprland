		"clock",
		"power-profiles-daemon"
	],
	"hyprland/language":{
		"format": "{}",
		"format-en": "EN",
		"format-es": "ES"
	},
	"hyprland/workspaces": {
		"active-only": false,
		"all-outputs": true,
		"show-special": false,
		"warp-on-scroll": true,
		"format": "{icon}",
		"on-scroll-up": "hyprctl dispatch workspace e-1",
		"on-scroll-down": "hyprctl dispatch workspace e+1",
