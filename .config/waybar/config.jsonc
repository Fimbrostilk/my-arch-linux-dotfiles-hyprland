	"custom/audio": {
		"exec": "$HOME/.scripts/sound/get-volume.sh",
		"on-click": "kitty alsamixer",
		"on-scrol-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
		"on-scrol-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%",
		"on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
		"signal": 1
	},
	"clock": {
		"tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
		"format-alt": "{:%Y-%m-%d}"
